<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="main.Controller" alignment="center" hgap="60" vgap="50">

    <VBox alignment="CENTER"
          GridPane.rowIndex="0"
          GridPane.columnIndex="0"
          GridPane.columnSpan="6">
        <Label text="Welcome !!!"
               fx:id="welcomeLabel"/>
    </VBox>

    <RadioButton text="Remote"
                 fx:id="remoteRadio"
                 alignment="CENTER"
                 selected="true"
                 GridPane.rowIndex="1"
                 GridPane.columnIndex="2"
                 GridPane.columnSpan="1">
        <toggleGroup>
            <ToggleGroup fx:id="toggleGroup"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton text="Local"
                 fx:id="localRadio"
                 alignment="CENTER"
                 GridPane.rowIndex="1"
                 GridPane.columnIndex="3"
                 GridPane.columnSpan="1"
                 toggleGroup="$toggleGroup"/>


    <VBox alignment="CENTER"
          GridPane.rowIndex="2"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2">
        <Label text="Account"
               textFill="red"
               fx:id="accountLabel"/>
    </VBox>

    <VBox alignment="CENTER"
          GridPane.rowIndex="2"
          GridPane.columnIndex="2"
          GridPane.columnSpan="2">
        <Label text="Address"
               textFill="red"
               fx:id="addressLabelM"/>
    </VBox>

    <VBox alignment="CENTER"
          GridPane.rowIndex="2"
          GridPane.columnIndex="4"
          GridPane.columnSpan="2">
        <Label text="Credit Card"
               textFill="red"
               fx:id="creditLabel"/>
    </VBox>


    <Label text="First Name:"
           fx:id="firstNameLabel"
           GridPane.rowIndex="3"
           GridPane.columnIndex="0"
           GridPane.columnSpan="1"/>
    <TextField
            fx:id="firstNameField"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1"
            GridPane.columnSpan="1"/>

    <Label text="Last Name:"
           fx:id="lastNameLabel"
           GridPane.rowIndex="4"
           GridPane.columnIndex="0"/>
    <TextField
            fx:id="lastNameField"
            GridPane.rowIndex="4"
            GridPane.columnIndex="1"/>


    <Label text="Type:"
           fx:id="typeLabel"
           GridPane.rowIndex="3"
           GridPane.columnIndex="4"/>
    <TextField
            fx:id="typeField"
            GridPane.rowIndex="3"
            GridPane.columnIndex="5"/>

    <Label text="Number:"
           fx:id="numberLabel"
           GridPane.rowIndex="4"
           GridPane.columnIndex="4"/>
    <TextField
            fx:id="numberField"
            GridPane.rowIndex="4"
            GridPane.columnIndex="5"/>

    <Label text="Exp Date:"
           fx:id="expLabel"
           GridPane.rowIndex="5"
           GridPane.columnIndex="4"/>
    <TextField
            fx:id="expField"
            GridPane.rowIndex="5"
            GridPane.columnIndex="5"/>

    <Label text="Address:"
           fx:id="addressLabel"
           GridPane.rowIndex="3"
           GridPane.columnIndex="2"/>
    <TextField
            fx:id="addressField"
            GridPane.rowIndex="3"
            GridPane.columnIndex="3"/>

    <Label text="City:"
           fx:id="cityLabel"
           GridPane.rowIndex="4"
           GridPane.columnIndex="2"/>
    <TextField
            fx:id="cityField"
            GridPane.rowIndex="4"
            GridPane.columnIndex="3"/>

    <Label text="State:"
           fx:id="stateLabel"
           GridPane.rowIndex="5"
           GridPane.columnIndex="2"/>
    <TextField
            fx:id="stateField"
            GridPane.rowIndex="5"
            GridPane.columnIndex="3"/>


    <VBox alignment="CENTER"
          GridPane.rowIndex="6"
          GridPane.columnIndex="0"
          GridPane.columnSpan="6">
        <Button text="Save"
                onAction="#handleSaveButton"
                fx:id="saveButton"/>
    </VBox>

    <VBox alignment="CENTER"
          GridPane.rowIndex="7"
          GridPane.columnIndex="0"
          GridPane.columnSpan="6">
        <Label text=""
               fx:id="logLabel"
               GridPane.rowIndex="5"
               GridPane.columnIndex="2"/>
    </VBox>

</GridPane>